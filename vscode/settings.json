{
  "breadcrumbs.enabled": true,

  "cSpell.language": "en-GB,en",
  "cSpell.dictionaryDefinitions": [
    {
      "name": "typeoneerror-dictionary",
      "path": "/Users/typeoneerror/dotfiles/vscode/cspell/typeoneerror-dictionary.txt"
    },
    {
      "name": "typeoneerror-web",
      "path": "/Users/typeoneerror/dotfiles/vscode/cspell/typeoneerror-web.txt"
    }
  ],
  "cSpell.dictionaries": ["typeoneerror-dictionary", "typeoneerror-web", "typescript"],
  "cSpell.enabled": false,
  "cSpell.enableFiletypes": [
    "coffeescript",
    "css",
    "erb",
    "go",
    "handlebars",
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "markdown",
    "php",
    "plaintext",
    "scss",
    "slim",
    "text",
    "typescript",
    "typescriptreact",
    "yaml",
    "yml"
  ],

  "diffEditor.renderSideBySide": false,

  "editor.codeActionsOnSave": {
    "source.fixAll": false
  },
  "editor.colorDecorators": false,
  "editor.cursorBlinking": "solid",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "Monolisa, 'Operator Mono', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 20,
  "editor.formatOnSave": false,
  "editor.lineHeight": 30,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": false,
  "editor.rulers": [80, 100],
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 100,

  "emmet.excludeLanguages": ["haml", "markdown"],
  "emmet.includeLanguages": {
    "postcss": "css"
  },

  "explorer.confirmDragAndDrop": false,

  "extensions.autoUpdate": false,

  "files.associations": {
    "*.css": "postcss",
    "*.js": "javascript",
    "*.js.erb": "javascript",
    "*.talon": "python",
    "Appfile": "ruby",
    "Fastfile": "ruby",
    "Gymfile": "ruby",
    "Matchfile": "ruby",
    "Pluginfile": "ruby",
  },

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/bower_components*": true,
    "**/build": true,
    "**/dist": true,
    "**/node_modules*": true,
    "**/package-lock.json": true,
    "**/npm-shrinkwrap.json": true,
    "**/tmp": true,
    "**/*.log": true,
    "**/*.dump": true,
    "**/*.rdb": true,
    "**/.nix-node": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.authors.enabled": false,

  "java.semanticHighlighting.enabled": true,

  "[markdown]": {
    "editor.tabSize": 4,
    "editor.quickSuggestions": false,
    "editor.wordWrap": "on",
    "files.trimTrailingWhitespace": false
  },

  "prettier.arrowParens": "always",
  "prettier.bracketSpacing": true,
  "prettier.endOfLine": "lf",
  "prettier.jsxBracketSameLine": false,
  "prettier.jsxSingleQuote": false,
  "prettier.printWidth": 100,
  "prettier.quoteProps": "as-needed",
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "es5",
  "prettier.useTabs": false,

  "python.languageServer": "Microsoft",

  "[ruby]": {
    "editor.defaultFormatter": "rebornix.ruby"
  },

  "shellcheck.exclude": ["SC1090"],

  "[swift]": {
    "editor.tabSize": 2
  },

  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "'Operator Mono', Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.lineHeight": 1.25,

  "vim.handleKeys": {
    "<C-d>": true,
    "<C-e>": true,
    "<C-y>": true
  },
  "vim.hlsearch": true,
  "vim.ignorecase": false,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.leader": "<Space>",
  "vim.normalModeKeyBindings": [
    // Open line under current line
    {
      "before": ["leader", "o"],
      "after": ["o", "esc"]
    },
    // Clear line
    {
      "before": ["leader", "c", "o"],
      "after": ["c", "c"]
    },
    // Clear search
    {
      "before": ["leader", "/"],
      "after": [],
      "commands": [
        {
          "command": ":nohlsearch"
        }
      ]
    },
    // Duplicate line
    {
      "before": ["leader", "d"],
      "after": ["y", "y", "p"]
    },
    // Comment line
    {
      "before": ["leader", "c", "c"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.commentLine"
        }
      ]
    },
    // Uncomment line
    {
      "before": ["leader", "c", "u"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.removeCommentLine"
        }
      ]
    },
    // Yank inside quotes
    {
      "before": ["leader", "y"],
      "after": ["y", "i", "\""]
    },
    // Paste inside quotes
    {
      "before": ["leader", "p"],
      "after": ["v", "i", "\"", "p"]
    }
  ],
  "vim.textwidth": 100,

  "vsicons.dontShowNewVersionMessage": true,

  "window.title": "${activeEditorMedium}${separator}${rootName}",

  "workbench.colorTheme": "Dracula",
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.showTabs": true,
  "workbench.editor.tabSizing": "shrink",
  "workbench.fontAliasing": "antialiased",
  "workbench.iconTheme": "vscode-icons",
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": false,
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "welcomePage",
  "workbench.statusBar.visible": true,

  "zenMode.centerLayout": false,
  "zenMode.fullScreen": false,
  "zenMode.hideActivityBar": true,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": true,
  "zenMode.hideTabs": false,
  "zenMode.restore": false
}
